<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.campuslib.view.LoanViewController">
    <children>
        <SplitPane dividerPositions="0.30" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                            <children>
                                <TextField fx:id="searchField" promptText="Cerca prestiti (ID, ISBN, titolo, matricola, nome, cognome, date)" />
                                <Separator />
                                <Label text="Seleziona Libro" />
                                <ComboBox fx:id="bookCombo" promptText="Scegli un libro dalla lista" VBox.vgrow="ALWAYS" prefWidth="400.0" maxWidth="Infinity" />

                                <Label text="Seleziona Utente" />
                                <ComboBox fx:id="userCombo" promptText="Scegli un utente dalla lista" VBox.vgrow="ALWAYS" prefWidth="400.0" maxWidth="Infinity" />

                                <Label text="Data inizio prestito" />
                                <Label fx:id="startLoanLabel" />

                                <Label text="Data prevista restituzione" />
                                <TextField fx:id="returnLoanField" promptText="es. 2025-12-14" />

                                <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="btnAddLoan" mnemonicParsing="false" onAction="#addLoan" text="Nuovo Prestito" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="btnRegisterReturn" mnemonicParsing="false" onAction="#registerReturn" text="Registra Restituzione" disable="true" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <TableView fx:id="tableLoan" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="clmIdLoan" editable="false" text="ID" prefWidth="15.0" minWidth="15.0" />
                                <TableColumn fx:id="clmBookLoan" editable="false" sortable="false" text="LIBRO" />
                                <TableColumn fx:id="clmUserLoan" editable="false" sortable="false" text="UTENTE" />
                                <TableColumn fx:id="clmStartLoan" editable="false" sortable="false" text="INIZIO" />
                                <TableColumn fx:id="clmReturnLoan" editable="false" sortable="false" text="RESTITUZIONE ATTESA" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>    
</AnchorPane>
