<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.campuslib.view.UserViewController">
    <children>
        <SplitPane dividerPositions="0.25" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                            <children>
                                <Label text="Nome" />
                                <TextField fx:id="nameField" />
                                <Label text="Cognome" />
                                <TextField fx:id="surnameField" />
                                <Label text="ID" />
                                <TextField fx:id="idField" />
                                <Label text="Email" />
                                <TextField fx:id="emailField" />
                                
                                <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
                                    <children>
                                        <Button fx:id="btnAddUser" mnemonicParsing="false" onAction="#addUser" text="Nuovo Utente" />
                                    </children>
                                </HBox>
                        <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="Cerca" />
                              <TextField fx:id="searchUserField" alignment="BOTTOM_CENTER" onAction="#searchUser" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <TableView fx:id="tableUsers" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="clmName" onEditCommit="#updateName" sortable="false" text="NOME" />
                                <TableColumn fx:id="clmSurname" onEditCommit="#updateSurname" text="COGNOME" />
                                <TableColumn fx:id="clmId" editable="false" text="ID" />
                                <TableColumn fx:id="clmEmail" editable="false" onEditCommit="#updateEmail" sortable="false" text="EMAIL" />
                                <TableColumn fx:id="clmUserLoan" editable="false" sortable="false" text="PRESTITI ATTIVI" />
                                <TableColumn fx:id="clmMaxLoans" sortable="false" text="MAX" />
                                <TableColumn fx:id="clmStatus" sortable="false" text="STATUS" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>       
</AnchorPane>
