<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="1000.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.campuslib.view.UserViewController">
    <children>
        <SplitPane dividerPositions="0.2" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                            <children>
                                <Label text="Nome" />
                                <TextField fx:id="nameField" />
                                <Label text="Cognome" />
                                <TextField fx:id="surnameField" />
                                <Label text="ID" />
                                <TextField fx:id="idField" />
                                <Label text="Email" />
                                <TextField fx:id="emailField" />
                                
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                                    <children>
                                        <Button fx:id="btnAddUser" mnemonicParsing="false" onAction="#addUser" text="Nuovo Utente" />
                                        <Button fx:id="btnUserStatus" mnemonicParsing="false" onAction="#updateUserStatus" text="Cambia Status" />
                                    </children>
                                </HBox>
                        <HBox alignment="CENTER" prefHeight="300.0" prefWidth="254.0" spacing="15.0">
                           <children>
                              <Label text="Cerca" />
                              <TextField fx:id="searchUserField" alignment="BOTTOM_CENTER" onAction="#searchUser" prefHeight="26.0" prefWidth="200.0" />
                           </children>
                        </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TableView fx:id="tableUsers" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="clmName" onEditCommit="#updateName" prefWidth="75.0" sortable="false" text="NOME" />
                                <TableColumn fx:id="clmSurname" onEditCommit="#updateSurname" prefWidth="75.0" text="COGNOME" />
                                <TableColumn editable="false" prefWidth="75.0" text="ID" />
                                <TableColumn fx:id="clmEmail" editable="false" onEditCommit="#updateEmail" prefWidth="75.0" sortable="false" text="EMAIL" />
                                <TableColumn fx:id="clmUserLoan" editable="false" prefWidth="155.20001220703125" sortable="false" text="PRESTITI ATTIVI" />
                                <TableColumn fx:id="clmMaxLoans" prefWidth="44.0" sortable="false" text="MAX" />
                                <TableColumn fx:id="clmStatus" prefWidth="75.0" sortable="false" text="STATUS" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>       
</AnchorPane>
